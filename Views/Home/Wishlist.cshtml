@{
    ViewData["title"] = "Wishlist";
    var index = 0;
}

<h3>Danh sách Yêu thích</h3>
<table class="table " id="example">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col" class="text-center">Ảnh</th>
            <th scope="col" class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center"><h3>Chưa có sản phẩm yêu thích nào được thêm vào.</h3></td>
            </tr>
        }
        @foreach (var wishlist in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@wishlist.Product.Name</td>
                <td>@Html.Raw(wishlist.Product.Description)</td>
                <td>@wishlist.Product.Price</td>
                <td class="text-center"><img src="~/media/products/@wishlist.Product.Image" width="120" /></td>
                <td class="text-center">
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-controller="Home"
                        asp-route-id="@wishlist.Wishlist.Id"> Xóa </a>
                </td>
            </tr>
        }
    </tbody>
</table>