@{
    ViewData["title"] = "Wishlist";
    var index = 0;
}

<h3>Wishlist</h3>
<table class="table " id="example">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center"><h3>Chưa có sản phẩm yêu thích nào được thêm vào.</h3></td>
            </tr>
        }
        @foreach (var wishlist in Model)
        {
            index++;
            <tr>
                <td>@index</td>
                <td>@wishlist.Product.Name</td>
                <td>@Html.Raw(wishlist.Product.Description)</td>
                <td>@wishlist.Product.Price</td>
                <td><img src="~/media/products/@wishlist.Product.Image" width="120" /></td>
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-controller="Home"
                        asp-route-id="@wishlist.Wishlist.Id"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>