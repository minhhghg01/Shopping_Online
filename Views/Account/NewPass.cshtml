@model AppUserModel
@{
	ViewData["Title"] = "Tạo mật khẩu mới";
}
<section id=""><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form"><!--login form-->
					<h2>Tạo mật khẩu mới</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="SendMailForgetPass" asp-controller="Account">
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
                        <div class="form-group">
							<label>Mật khẩu</label>
							<input asp-for="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>
						<button class="btn btn-default">Tạo</button>
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản</a> <br />
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}