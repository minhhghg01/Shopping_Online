@model LoginViewModel
@{
	ViewData["Title"] = "Đăng nhập";
}
<section id="login-section">
	<div class="login-wrapper">
		<div class="login-card">
			<h2>Đăng nhập</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<form asp-action="Login" asp-controller="Account">
				<div class="floating-label-group">
					<input asp-for="UserName" class="form-control" placeholder=" " />
					<label for="UserName" class="floating-label">Tên Đăng nhập</label>
				</div>
				<div class="floating-label-group">
					<input asp-for="Password" class="form-control" placeholder=" " type="password" />
					<label for="Password" class="floating-label">Mật khẩu</label>
					<span asp-validation-for="Password" class="text-danger" />
				</div>
				<button type="submit" class="btn">Đăng nhập</button>
				<div class="d-flex justify-content-between mt-3">
					<a asp-action="ForgetPass" asp-controller="Account" class="text-primary">Quên mật khẩu?</a>
				</div>
			</form>
			<hr class="my-4" />
			<div class="text-center">
				<p class="mb-0">Chưa có tài khoản? <a href="@Url.Action("Create", "Account")" class="text-primary">Tạo
						tài khoản mới</a></p>
			</div>
		</div>

		<div class="login-bg">
			<img src="~/images/bg.jpeg" alt="Background" />
		</div>
	</div>
</section>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
<style>
	#login-section {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		margin-bottom: 50px;
	}

	.login-wrapper {
		display: flex;
		width: 80%;
		max-width: 1200px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
		border: 1px solid #ccc;
		border-radius: 8px;
		overflow: hidden;
		background-color: #fff;
	}

	.login-card {
		flex: 1;
		padding: 40px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		max-width: 500px;
		background-color: #fff;
	}

	.login-bg {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #e9ecef;
		overflow: hidden;
		position: relative;
	}

	.login-bg img {
		width: 100%;
		height: auto;
		object-fit: cover;
	}

	.login-card h2 {
		margin-bottom: 20px;
		text-align: center;
	}

	.btn {
		background-color: #1877f2;
		color: #fff;
		border: none;
		border-radius: 8px;
		display: block;
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		text-align: center;
		cursor: pointer;
		transition: background-color 0.3s, transform 0.2s;
	}

	.btn:hover {
		background-color: #165eab;
		transform: scale(1.02);
	}

	.btn:active {
		background-color: #134e91;
		transform: scale(0.98);
		box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.2);
	}

	a {
		text-decoration: none;
		color: #1877f2;
	}

	a:hover {
		text-decoration: underline;
	}

	.floating-label-group {
		position: relative;
		margin-bottom: 1.9rem;
	}

	.floating-label-group input {
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		border: 1px solid #ccc;
		border-radius: 8px;
		outline: none;
		background-color: #f9f9f9;
		transition: border-color 0.3s, box-shadow 0.3s;
	}

	.floating-label-group input:focus {
		border-color: #1877f2;
		box-shadow: 0 0 4px rgba(24, 119, 242, 0.5);
	}

	.floating-label-group label {
		position: absolute;
		top: 18px;
		left: 16px;
		transform: translateY(-50%);
		font-size: 16px;
		color: #6c757d;
		pointer-events: none;
		transition: all 0.3s ease;
		background-color: transparent;
		padding: 0 4px;
	}

	.floating-label-group input:focus+label,
	.floating-label-group input:not(:placeholder-shown)+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #1877f2;
		padding: 0 6px;
	}

	.floating-label-group input:autofill+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #1877f2;
		padding: 0 6px;
	}
</style>