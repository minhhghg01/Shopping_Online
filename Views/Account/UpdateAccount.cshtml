@model AppUserModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<section id=""><!--form-->
    <div class="signup-form"><!--sign up form-->
        <h2>Thông tin cá nhân!</h2>
        <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="UpdateInfoAccount" asp-controller="Account" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Tên Đăng nhập</label>
                <input asp-for="UserName" readonly class="form-control" />
                <span asp-validation-for="UserName" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" readonly class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Mật khẩu cũ</label>
                <input type="password" name="currentPassword" class="form-control" autocomplete="new-password" />
            </div>

            <div class="form-group">
                <label>Mật khẩu mới</label>
                <input type="text" name="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger" />
            </div>

            <button class="btn btn-default">Cập nhật</button>
            <a asp-action="Login" asp-controller="Account">Quay lại</a>
        </form>
    </div><!--/sign up form-->
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}