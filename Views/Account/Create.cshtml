@model UserModel
@{
	ViewData["Title"] = "Đăng ký";
}
<section id="signup-section">
	<div class="signup-wrapper">
		<div class="signup-bg">
			<img src="~/images/bg.jpeg" alt="Background" />
		</div>
		<div class="signup-card">
			<h2>Đăng ký tài khoản!</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<form asp-action="Create" asp-controller="Account">
				<div class="floating-label-group">
					<input asp-for="UserName" class="form-control" placeholder=" " />
					<label asp-for="UserName" class="floating-label">Tên Đăng nhập</label>
					<span asp-validation-for="UserName" class="text-danger" />
				</div>

				<div class="floating-label-group">
					<input asp-for="Email" class="form-control" placeholder=" " />
					<label asp-for="Email" class="floating-label">Email</label>
					<span asp-validation-for="Email" class="text-danger" />
				</div>

				<div class="floating-label-group">
					<input asp-for="Password" class="form-control" type="password" placeholder=" " />
					<label for="Password" class="floating-label">Mật khẩu</label>
					<span asp-validation-for="Password" class="text-danger" />
				</div>

				<div class="floating-label-group">
					<input name="ConfirmPassword" class="form-control" type="password" placeholder=" " />
					<label for="ConfirmPassword" class="floating-label">Nhập lại mật khẩu</label>
					<small class="text-muted">
						Mật khẩu phải có ít nhất 6 ký tự, bao gồm cả chữ số và chữ cái thường, không chứa ký tự đặc biệt.
					</small>
				</div>

				<button type="submit" class="btn">Tạo tài khoản</button>

				<hr class="my-4" />
				<div class="text-center">
					<p class="mb-0">Đã có tài khoản? <a href="@Url.Action("Login", "Account")" class="text-primary">Đăng nhập</a></p>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

<style>
	#signup-section {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		margin-bottom: 50px;
	}

	.signup-wrapper {
		display: flex;
		width: 80%;
		max-width: 1200px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
		border: 1px solid #ccc;
		border-radius: 8px;
		overflow: hidden;
		background-color: #fff;
	}

	.signup-card {
		flex: 1;
		padding: 40px;
		display: flex;
		flex-direction: column;
		justify-content: center;
		max-width: 500px;
		background-color: #fff;
	}

	.signup-bg {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #e9ecef;
		overflow: hidden;
		position: relative;
	}

	.signup-bg img {
		width: 100%;
		height: auto;
		object-fit: cover;
	}

	.signup-card h2 {
		margin-bottom: 20px;
		text-align: center;
	}

	.btn {
		background-color: #28a745;
		color: #fff;
		border: none;
		border-radius: 8px;
		display: block;
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		text-align: center;
		cursor: pointer;
		transition: background-color 0.3s, transform 0.2s;
	}

	.btn:hover {
		background-color: #218838;
		transform: scale(1.02);
	}

	.btn:active {
		background-color: #1e7e34;
		transform: scale(0.98);
		box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.2);
	}

	a {
		text-decoration: none;
		color: #1877f2;
	}

	a:hover {
		text-decoration: underline;
	}

	.floating-label-group {
		position: relative;
		margin-bottom: 1.9rem;
	}

	.floating-label-group input {
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		border: 1px solid #ccc;
		border-radius: 8px;
		outline: none;
		background-color: #f9f9f9;
		transition: border-color 0.3s, box-shadow 0.3s;
	}

	.floating-label-group input:focus {
		border-color: #28a745;
		box-shadow: 0 0 4px rgba(24, 119, 242, 0.5);
	}

	.floating-label-group label {
		position: absolute;
		top: 18px;
		left: 16px;
		transform: translateY(-50%);
		font-size: 16px;
		color: #6c757d;
		pointer-events: none;
		transition: all 0.3s ease;
		background-color: transparent;
		padding: 0 4px;
	}

	.floating-label-group input:focus+label,
	.floating-label-group input:not(:placeholder-shown)+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #28a745;
		padding: 0 6px;
	}

	.floating-label-group input:autofill+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #28a745;
		padding: 0 6px;
	}
</style>
