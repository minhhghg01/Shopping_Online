@model AppUserModel
@{
	ViewData["Title"] = "Quên mật khẩu";
}
<section id="forget-section" class="background-container">
	<div class="form-container">
		<div class="forget-card">
			<h2>Quên mật khẩu</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<form asp-action="SendMailForgetPass" asp-controller="Account">
				<div class="floating-label-group">
					<input asp-for="Email" class="form-control" placeholder=" " />
					<label for="Email" class="floating-label">Email</label>
					<span asp-validation-for="Email" class="text-danger" />
					<small class="text-muted">
						Vui lòng nhập email để lấy lại mật khẩu của bạn.
					</small>
				</div>

				<button type="submit" class="btn">Gửi</button>

				<hr class="my-4" />
				<div class="text-center">
					<p class="mb-0"><a href="@Url.Action("Login", "Account")" class="text-primary">Quay lại</a></p>
				</div>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

<style>
	.background-container {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 50px;
	}

	.form-container {
		position: relative;
		background-image: url('@Url.Content("~/images/bg.jpeg")');
		background-size: cover;
		background-position: center;
		width: 100%;
		max-width: 500px;
		padding: 60px;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.forget-card {
		background-color: rgba(255, 255, 255, 0.9);
		/* Nền form trong suốt */
		border: 1px solid #ccc;
		border-radius: 10px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		padding: 20px;
		position: relative;
		z-index: 1;
	}

	.forget-card h2 {
		margin-bottom: 20px;
		text-align: center;
	}

	.btn {
		background-color: #1877f2;
		color: #fff;
		border: none;
		border-radius: 8px;
		display: block;
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		text-align: center;
		cursor: pointer;
		transition: background-color 0.3s, transform 0.2s;
	}

	.btn:hover {
		background-color: #165eab;
		transform: scale(1.02);
	}

	.btn:active {
		background-color: #134e91;
		transform: scale(0.98);
		box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.2);
	}

	a {
		text-decoration: none;
		color: #1877f2;
	}

	a:hover {
		text-decoration: underline;
	}

	.floating-label-group {
		position: relative;
		margin-bottom: 1.9rem;
	}

	.floating-label-group input {
		width: 100%;
		padding: 12px 16px;
		font-size: 16px;
		border: 1px solid #ccc;
		border-radius: 8px;
		outline: none;
		background-color: #f9f9f9;
		transition: border-color 0.3s, box-shadow 0.3s;
	}

	.floating-label-group input:focus {
		border-color: #1877f2;
		box-shadow: 0 0 4px rgba(24, 119, 242, 0.5);
	}

	.floating-label-group label {
		position: absolute;
		top: 18px;
		left: 16px;
		transform: translateY(-50%);
		font-size: 16px;
		color: #6c757d;
		pointer-events: none;
		transition: all 0.3s ease;
		background-color: transparent;
		padding: 0 4px;
	}

	.floating-label-group input:focus+label,
	.floating-label-group input:not(:placeholder-shown)+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #1877f2;
		padding: 0 6px;
	}

	.floating-label-group input:autofill+label {
		top: -10px;
		left: 6px;
		font-size: 12px;
		color: #1877f2;
		padding: 0 6px;
	}

	.forget-card p {
		font-size: 15px;
		/* Cỡ chữ dễ đọc */
		color: #6c757d;
		/* Màu chữ xám nhạt */
		margin-bottom: 20px;
		/* Khoảng cách dưới */
		line-height: 1.6;
		/* Khoảng cách dòng dễ đọc */
	}
</style>
